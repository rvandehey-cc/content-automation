{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "no-useless-escape": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint", "react", "react-hooks"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": { "jsx": true }
      },
      "rules": {
        "no-undef": "off"
      }
    },
    {
      "files": ["**/*.jsx"],
      "parser": "@babel/eslint-parser",
      "plugins": ["react", "react-hooks"],
      "parserOptions": {
        "requireConfigFile": false,
        "babelOptions": {
          "presets": ["@babel/preset-react"]
        }
      },
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
