#!/bin/sh
echo "ğŸ” Running pre-commit checks..."

# Run linting (allow warnings, block on errors)
npm run lint -- --max-warnings=-1
LINT_EXIT=$?

if [ $LINT_EXIT -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the errors above before committing."
  exit 1
fi

echo "ğŸ§ª Running unit tests..."
# Run only unit tests, skip integration tests for speed
npm run test -- --testPathIgnorePatterns=integration
TEST_EXIT=$?

if [ $TEST_EXIT -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before committing."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0
